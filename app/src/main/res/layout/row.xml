<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/row_background_border">

    <TextView
        android:id="@+id/time_stamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25dp"
        android:text="time"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/downvote"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="127dp" />


    <Button android:text="+"
        android:id="@+id/upvote"
        android:textSize="25dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textAlignment="gravity"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/downvote"
        android:focusable="false"
        android:textColor="#FFFFFF"
        android:layout_marginTop="3dp"
        android:backgroundTint="#BBBBBB"
        android:background="@drawable/round_buttons">
    </Button>


    <TextView
        android:id="@+id/votes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "0"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_marginRight="12dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_alignParentEnd="true"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/upvote" />


    <Button android:text="-"
        android:id="@+id/downvote"
        android:textSize="25dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textAlignment="gravity"
        android:focusable="false"
        android:layout_below="@+id/votes"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="3dp"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#BBBBBB"
        android:background="@drawable/round_buttons">
    </Button>



</RelativeLayout>
